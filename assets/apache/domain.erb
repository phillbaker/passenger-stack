#
#Wildcard subdomain
<VirtualHost <%= domain %>:80>
    ServerName www.<%= domain %>
    ServerAlias *.<%= domain %>
    
    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log combined
		
    UseCanonicalName Off
    VirtualDocumentRoot /var/www/%0/current/public

    ServerSignature Off 
</VirtualHost>
